<%= render 'shared/title', title: "All Recipes" %>

<!--Iterate through each one of the recipes-->
<% @recipes.each do |recipe|%>
	<div class="row">
		<div class="col-md-2">
			<section class="chef_info center">
			
				<!--Add gravatar image-->
				<%= gravatar_for recipe.chef, size: 100 %>
				<h5>Chef name: <%= recipe.chef.chefname %></h5>	
			</section>
		</div>

		<div class="col-lg-8 well">
			<h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
			<p><%= recipe.summary %></p>
			<p>
				<span class="quiet">
					<small><%= time_ago_in_words(recipe.created_at) %> ago</small>
				</span>
			</p>
		</div>

	</div>
<hr>
<% end %>